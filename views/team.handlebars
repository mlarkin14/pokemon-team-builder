{{! this is the team builder page. it will be labeled /team}}

<div class="container margin-cards">
    <div class="card-group">

        {{!-- first pokemon box --}}
        <div class="pokemon-1 card">
            {{#if team.Pokemons.0.name}}
            <img class="card-img-top team-image" src={{team.Pokemons.0.img_url}} alt="Card image pokemon 1">
            <div class="card-body">
                <h5 class="card-title">{{team.Pokemons.0.name}}</h5>
                <p class="card-text">{{team.Pokemons.0.weight}}</p>
            </div>
            {{else}}
            <button class="btn btn-secondary add-pokemon" type="submit" id="add-pokemon">Choose your pokemon</button>
            {{/if}}
        </div>


        {{!-- second pokemon box --}}

        <div class="pokemon-2 card">
            {{#if team.Pokemons.1.name}}
            <img class="card-img-top team-image" src={{team.Pokemons.1.img_url}} alt="Card image pokemon 2">
            <div class="card-body">
                <h5 class="card-title">{{team.Pokemons.1.name}}</h5>
                <p class="card-text">{{team.Pokemons.1.weight}}</p>
            </div>
            {{else}}
            <button class="btn btn-secondary add-pokemon" type="button" id="add-pokemon" data-toggle="dropdown"
                aria-haspopup="true" aria-expanded="false">Choose your pokemon</button>
            {{/if}}
        </div>

        {{!-- third pokemon box --}}

        <div class="pokemon-3 card">
